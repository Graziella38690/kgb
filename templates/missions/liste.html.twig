{% extends 'base.html.twig' %}
{% block title %}Liste des missions{% endblock %}

{% block body %}




 <div class="container">
 <h1>Liste des missions</h1>
 <table class="table table-bordered table-striped">
        <thead>
        <tr>
        <th>Code</th>
        <th>Titre</th>
        <th>Description</th>
        <th>Actions</th>
        </tr>

            <tbody>
                {% for Missions in Missions %}

                <tr>
                    <th scope="row justify-content-center">
                    {{ Missions.codemission }}
                    </th>
                    <td>{{ Missions.titre }}</td>
                    <td>{{ Missions.description }}</td>
                        <td>
                    
						
                      <a href="{{ path('app_details', {'id': Missions.id}) }}">Voir</a>
                      {% if is_granted('ROLE_ADMIN') %}
                      <a href="{{ path('app_remove', {'id': Missions.id}) }} ">Delete</a>
                       <a href="{{ path('app_missions_edit', {'id': Missions.id}) }}">Modifier</a>
                        {% endif %}



                    </td>

			     </tr>
                
                {% endfor %}
                
            </tbody>
        </table>
       </div>
         {% if is_granted('ROLE_ADMIN') %}
    <p> <a href="{{ path('app_missions_new') }}">New</a></p>
 {% endif %}

{% endblock %}