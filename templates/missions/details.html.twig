{% extends 'base.html.twig' %}

{% block title %}Détails Mission{% endblock %}

{% block body %}

 

 

      <div class="container">
 <h1>Détails de la mission</h1>
 <table class="table table-bordered table-striped">
            <tbody>
                {% for Missions in Missions %}

                <tr>
                    <th>Code</th>
                    <td>{{ Missions.codemission }}</td>
			    </tr>

                <tr>
                    <th>Titre</th>
                    <td>{{ Missions.titre }}</td>
			    </tr>

                <tr>
                    <th>Description</th>
                    <td>{{ Missions.description }}</td>
			    </tr>

                <tr>
                    <th>Début</th>
                    <td>{{Missions.datededebut|date('d/m/Y')}}</td>
			    </tr>

                <tr>
                    <th>Fin</th>
                    <td>{{Missions.datedefin|date('d/m/Y')}}</td>
			    </tr>

                <tr>
                    <th>Agent(s)</th>
                    <td>
					{% for Agents in Missions.Agents %}
						<li>{{Agents.nom}}</li>
					{% endfor %}
				    </td>
			    </tr>

                <tr>
                    <th>Cibles(s)</th>
                    <td>
					{% for Cibles in Missions.Cibles %}
						<li>{{Cibles.nom}}</li>
					{% endfor %}
				    </td>
			    </tr>

                <tr>
                    <th>Contact(s)</th>
                    <td>
					{% for Contacts in Missions.Contacts %}
						<li>{{Contacts.nom}}</li>
					{% endfor %}
				    </td>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>
						<li>{{Missions.Pays.nom}}</li>
				    </td>
                </tr>

                <tr>
                    <th>Type</th>
                    <td>
						<li>{{Missions.Type.nom}}</li>
				    </td>
			    </tr>
                    <tr>
                    <th>Statut</th>
                    <td>
						<li>{{Missions.Statut.nom}}</li>
				    </td>
			    </tr>
                <tr>
                    <th>Planque(s)</th>
                    <td>
					{% for Planque in Missions.Planque %}
						<li>{{Planque.adresse}}</li>
					{% endfor %}
				    </td>
                </tr>
                    <tr>
                    <th>Spécialitée</th>
                    <td>
						<li>{{Missions.Specialite.nom}}</li>
				    </td>
                    {% if is_granted('ROLE_ADMIN') %}
                   <div class="row justify-content-center">
                    <a href="{{ path('app_remove', {'id': Missions.id}) }}" class="btn btn-danger" role="button">Supprimer la mission</a>
                    <a href="{{ path('app_missions_edit', {'id': Missions.id}) }}" class="btn btn-dark" role="button">Modifier</a>
                    </div>
                    {% endif %}
                {% endfor %}
        
            </tbody>
        </table>

</div>
<div class="row justify-content-center">

<a href="{{ path('app_liste') }}" class="btn btn-dark" role="button">Retour à la liste des missions</a>
</div>
{% endblock %}


