{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}


 <div class="container">
  <h1>Liste des contacts</h1>
  <h3>Nombres de contact : ({{Contacts.getTotalItemCount }})</h3>
 <table class="table table-bordered table-striped">
        <thead>
        <tr>
        <th>Code</th>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Date de naissance</th>
        <th>Nationalite</th>
        <th>Actions</th>

        </tr>
            <tbody>
                {% for Contacts in Contacts %}

                <tr>
                    <th scope="row justify-content-center">
                   {{ Contacts.nomdecode }}
                    </th>
                    <td>{{ Contacts.nom }}</td>
                    <td>{{ Contacts.prenom }}</td>
                    <td>{{Contacts.datedenaissance|date('d/m/Y')}}</td>
                    <td>{{Contacts.nationalite.nom}}</td>

                    <td>
                    <a href="{{ path('app_contact_edit', {'id': Contacts.id}) }}" class="btn btn-secondary" role="button">Modifier</a>
 <a href="{{ path('app_contact_remove', {'id': Contacts.id}) }}" class="btn btn-danger" role="button">Supprimer</a>
                   
					
                    </td>
			     </tr>
                {% endfor %}
            </tbody>
        </table>
         <div class="row justify-content-center">
        {{ knp_pagination_render(Contacts) }}
        </div>
         </div>
   <div class="row justify-content-center">
        
         <a href="{{ path('app_contact_new') }}" class="btn btn-secondary" role="button">Cr√©e un contact</a>
    </div>

{% endblock %}
 