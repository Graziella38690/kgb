{% extends 'base.html.twig' %}

{% block title %}Liste des agents{% endblock %}

{% block body %}

<div class="container">
 <h1>Liste des agents</h1>
 <h3>Nombres d'agents : ({{Agents.getTotalItemCount }})</h3>
 <table class="table table-bordered table-striped">
        <thead>
        <tr>
        <th>Code</th>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Date de naissance</th>
        <th>Nationalite</th>
        <th>Specialite</th>
        <th>Actions</th>
        
        </tr>

            <tbody>
                {% for Agents in Agents %}

                <tr>
                    <th scope="row justify-content-center">
                   {{ Agents.codeidentification }}
                    </th>
                    <td>{{ Agents.nom }}</td>
                    <td>{{ Agents.prenom }}</td>
                    <td>{{Agents.datedenaissance|date('d/m/Y')}}</td>
                    <td>{{Agents.nationalite.nom}}</td>
 <td>
					{% for Specialite in Agents.specialite %}
						<li>{{Specialite.nom}}</li>
					{% endfor %}
				    </td>


                        <td>
                        



 <a href="{{ path('app_agent_edit', {'id': Agents.id}) }}" class="btn btn-dark" role="button">Modifier</a>
 <a href="{{ path('app_agent_remove', {'id': Agents.id}) }}" class="btn btn-danger" role="button">Supprimer</a>
                    </td>

			     </tr>
                
                {% endfor %}
                
            </tbody>
        </table>
         <div class="row justify-content-center">
        {{ knp_pagination_render(Agents) }}
        </div>
         </div>
          <div class="row justify-content-center">
      
         <a href="{{ path('app_agents_new') }}" class="btn btn-dark" role="button">Crer un agent</a>
    </div>
    

{% endblock %}
 









