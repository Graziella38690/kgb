{% extends 'base.html.twig' %}

{% block title %}Liste des pays{% endblock %}

{% block body %}


 <div class="container">
 <h1>Liste des Pays</h1>
 <table class="table table-bordered table-striped">
        <thead>
        <tr>
       
        <th>Pays</th>
        <th>Nationalite</th>
        <th>Actions</th>
        </tr>
            <tbody>
                {% for Pays in Pays %}

                <tr>
                    <th scope="row justify-content-center">
                   {{ Pays.nom }}
                    </th>
                 <td>
                    {{ Pays.nationalite.nom }}
					
                    </td>
                   <td>
                    <a href="{{ path('app_pays_remove', {'id': Pays.id}) }}">Delete</a>
					<a href="{{ path('app_pays_edit', {'id': Pays.id}) }}">Modifier</a>
                    </td>
			     </tr>
                {% endfor %}
            </tbody>
        </table>
         </div>
    <p> <a href="{{ path('app_pays_new') }}">New</a></p>

{% endblock %}
 
